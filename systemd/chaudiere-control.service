[Unit]
Description=Interface Web Controle Chaudiere
After=network.target ebusd.service
Wants=ebusd.service

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/chaudiere-control
ExecStart=/usr/bin/node /home/pi/chaudiere-control/server.js
Restart=on-failure
RestartSec=10
StartLimitInterval=200
StartLimitBurst=5
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
